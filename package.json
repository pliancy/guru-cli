{
  "name": "guru-cli",
  "version": "1.0.2",
  "description": "CLI tools for Guru KB (getguru.com)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "guru-cli": "bin/run"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "clean": "rimraf dist coverage tmp",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest",
    "test:ci": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "npm run clean && npm run lint:fix && npm run format:fix && tsc",
    "build:ci": "tsc",
    "build:check": "tsc --noEmit",
    "build:watch": "npm run clean && tsc -w",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "guru",
    "cli",
    "kb",
    "knowledgebase"
  ],
  "author": {
    "name": "Dillon Head",
    "email": "dillon@pliancy.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pliancy/guru-cli"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.9.0",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "eslint": "7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard-with-typescript": "20.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.5",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "4.3.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=12"
  },
  "volta": {
    "node": "14.16.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cac": "^6.7.2",
    "chalk": "^4.1.0",
    "cli-progress": "^3.9.0",
    "cli-ux": "^5.5.1",
    "conf": "^9.0.2",
    "search-query-parser": "^1.5.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix"
    ],
    "*.${js,jsx,ts,tsx,json}": [
      "prettier --write"
    ]
  }
}
