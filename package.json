{
  "name": "guru-cli",
  "version": "1.1.0",
  "description": "CLI tools for Guru KB (getguru.com)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "guru-cli": "bin/run"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "clean": "rimraf dist coverage tmp",
    "dev": "ts-node src/cli.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest",
    "test:ci": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "npm run clean && npm run lint:fix && npm run format:fix && tsc",
    "build:ci": "tsc",
    "build:check": "tsc --noEmit",
    "build:watch": "npm run clean && tsc -w",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "guru",
    "cli",
    "kb",
    "knowledgebase"
  ],
  "author": {
    "name": "Dillon Head",
    "email": "dillon@pliancy.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pliancy/guru-cli"
  },
  "devDependencies": {
    "@pliancy/eslint-config-ts": "0.1.0",
    "@types/cli-progress": "3.9.0",
    "@types/node": "17.0.21",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "eslint": "7.19.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-config-standard-with-typescript": "20.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-promise": "4.2.1",
    "husky": "8.0.1",
    "jest": "^29.1.1",
    "lint-staged": "13.0.3",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=12"
  },
  "volta": {
    "node": "14.20.1"
  },
  "dependencies": {
    "axios": "0.27.2",
    "cac": "6.7.2",
    "chalk": "5.0.1",
    "cli-progress": "3.9.0",
    "cli-ux": "6.0.9",
    "conf": "10.2.0",
    "search-query-parser": "1.5.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix"
    ],
    "*.${js,jsx,ts,tsx,json}": [
      "prettier --write"
    ]
  }
}
